@model PropertyManagementTool.Models.PropertyViewModel
@{
    ViewBag.Title = "Add new property";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Address)
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Address)
            @Html.ValidationMessageFor(m => m.Address)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Size)
        </div>

        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Size)
            @Html.ValidationMessageFor(m => m.Size)
        </div>
    </div>
    <br />
    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(m => m.Bedrooms)
        </div>

        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Bedrooms)
            @Html.ValidationMessageFor(m => m.Bedrooms)
        </div>
    </div>
    <br />
    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(m => m.Bathrooms)
        </div>

        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Bathrooms)
            @Html.ValidationMessageFor(m => m.Bathrooms)
        </div>
    </div>
    <br />
    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(m => m.Description)
        </div>

        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Description)
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    <br />
    <div class="row">

        <div class="col-md-2">
            @Html.LabelFor(m => m.PropertyStatusId)
        </div>

        <div class="col-md-6">
            @Html.DropDownListFor(m => m.PropertyStatusId, (SelectList)ViewBag.PropertyStatusList)
            @Html.ValidationMessageFor(m => m.PropertyStatusId)
        </div>
    </div>
    <br />
    <div class="row">
        <input type="submit" class="btn btn-default" value="Save" />
    </div>
}
