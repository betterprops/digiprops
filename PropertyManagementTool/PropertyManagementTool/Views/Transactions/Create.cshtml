@model PropertyManagementTool.Models.TransactionViewModel
@{
    ViewBag.Title = "New transaction";
}
<br/>
<h5>@ViewBag.Title</h5>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.DateCreated, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.DateCreated, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.DateCreated, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Amount, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.PropertyId, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.PropertyId, (SelectList)ViewBag.PropertiesList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PropertyId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.CategoryId, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CategoriesList, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.CategoryId, "", new { @class = "text-danger" })
        </div>
    </div>
    <br/>
    <input type="submit" value="Save" class="btn btn-primary"/>
}
