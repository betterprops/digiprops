@using System.Web.UI.WebControls
@model PropertyManagementTool.Models.LeaseViewModel
@{
    ViewBag.Title = "Lease Details";
}
<br/>
<h5>@ViewBag.Title</h5>
<hr/>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.LeaseId)
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.PropertyAddress, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.PropertyId)
            @Html.HiddenFor(m => m.PropertyAddress)
            <a href='@Url.Action("Details", "Properties", new {pId = Model.PropertyId})'>@Html.DisplayFor(m => m.PropertyAddress, new {@class = "form-control", @readonly = "true"})</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.TenantFullName, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.TenantFullName)
            @Html.TextBoxFor(m => m.TenantFullName, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Duration, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.Duration)
            @Html.TextBoxFor(m => m.Duration, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.MonthlyRent, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.MonthlyRent)
            @Html.TextBoxFor(m => m.MonthlyRent, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.StartDate, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.StartDate)
            @Html.TextBoxFor(m => m.StartDate, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.EndDate, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.EndDate)
            @Html.TextBoxFor(m => m.EndDate, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.InitialDeposit, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.InitialDeposit)
            @Html.TextBoxFor(m => m.InitialDeposit, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-6">
            @Html.LabelFor(m => m.InitialDepositDescription, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.HiddenFor(m => m.InitialDepositDescription)
            @Html.TextAreaFor(m => m.InitialDepositDescription, new {@class = "form-control", @readonly = "true" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-2">
            @Html.LabelFor(m => m.LeaseStatusId, new {@class = "control-label"})
        </div>
        <div class="col-md-4">
            @Html.DropDownListFor(m => m.LeaseStatusId, ((SelectList) ViewBag.LeaseStatusList), new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.LeaseStatusId)
        </div>
    </div>
    <input type="submit" value="Save" class="btn btn-primary"/>
}