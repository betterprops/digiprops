@model PropertyManagementTool.Models.LeaseTermViewModel
@{
    ViewBag.Title = "Add Lease Terms";
}

<h2>@ViewBag.Title</h2>
<br />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()

    <input type="hidden" id="pId" value="@Model.PropertyId" />

    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.PropertyId, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @(Model.PropertyId > 0 ? 
                  Html.DropDownListFor(m => m.PropertyId, (SelectList) ViewBag.PropertiesList, new {@class = "form-control", disabled = "true"}) : 
                  Html.DropDownListFor(m => m.PropertyId, (SelectList) ViewBag.PropertiesList, new {@class = "form-control"})
                  )
            @Html.ValidationMessageFor(m => m.PropertyId)
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.MonthlyRent, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.MonthlyRent, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.MonthlyRent)
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Duration, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Duration, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Duration)
        </div>
    </div>
    <br/>
    <div class="row">
        <div class="col-md-2">
            @Html.LabelFor(m => m.Description, new { @class = "control-label" })
        </div>
        <div class="col-md-6">
            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Description)
        </div>
    </div>
    <br />
    <div class="row">
        <input type="submit" class="btn btn-default" value="Save" />
        <a href='@Url.Action("Details", "Properties", new { pId = Model.PropertyId })' class="btn btn-default">Cancel</a>
    </div>
}
